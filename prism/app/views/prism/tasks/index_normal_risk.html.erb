<% content_for :page_title, "Determine and evaluate the level of product risk" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Determine and evaluate the level of product risk</h1>
    <% if @prism_risk_assessment.draft? %>
      <p class="govuk-body govuk-!-font-weight-bold">Assessment incomplete</p>
    <% end %>
    <p class="govuk-body">You have completed <%= sections_complete %> of <%= sections.length %> sections.</p>
    <ol class="govuk-list govuk-list--number govuk-heading-m">
      <% sections.each_with_index do |section, section_index| %>
        <li>
          <h2 class="govuk-heading-m"><%= section[:title] %></h2>
          <ul class="govuk-task-list">
            <% section[:tasks].each_with_index do |task, task_index| %>
              <li class="govuk-task-list__item<% if task.last.present? %> govuk-task-list__item--with-link<% end %>">
                <div class="govuk-task-list__task-name-and-hint">
                  <% if task.last.present? %>
                    <a class="govuk-link govuk-task-list__link" href="<%= task.last %>" aria-describedby="task-list-<%= section_index %>-<%= task_index %>-status"><%= task.first %></a>
                  <% else %>
                    <div><%= task.first %></div>
                  <% end %>
                </div>
                <div class="govuk-task-list__status" id="task-list-<%= section_index %>-<%= task_index %>-status">
                  <%= govuk_tag(text: "Cannot start yet", colour: "grey") %>
                </div>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ol>
  </div>
</div>
