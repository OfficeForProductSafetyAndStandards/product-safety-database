<% content_for :page_title, "Evaluate the product deemed serious risk" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Evaluate the product deemed serious risk</h1>
    <% if @prism_risk_assessment.draft? %>
      <p class="govuk-body govuk-!-font-weight-bold">Risk evaluation incomplete</p>
    <% end %>
    <p class="govuk-body">You have completed <%= sections_complete %> of <%= serious_risk_sections.count %> sections.</p>
    <%= render partial: "task_list", locals: { sections: serious_risk_sections } %>
  </div>
</div>
