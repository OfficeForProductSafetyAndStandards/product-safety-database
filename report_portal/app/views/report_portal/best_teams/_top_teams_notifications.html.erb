<%=
  govuk_table do |table|
    table.with_head do |head|
      head.with_row do |row|
        row.with_cell(text: "Team name")
        row.with_cell(text: "Notifications")
      end
    end

    table.with_body do |body|
      @by_notifications.decorate.each do |team|
        body.with_row do |row|
          row.with_cell(text: team.name)
          row.with_cell(text: team.notifications_count)
        end
      end
    end
  end
%>