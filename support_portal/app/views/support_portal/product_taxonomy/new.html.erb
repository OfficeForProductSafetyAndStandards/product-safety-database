<% content_for :page_title, "Upload new product taxonomy file" %>
<% @errors = @product_taxonomy_import.errors.any? %>
<% @back_link_href = support_root_path %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @product_taxonomy_import, url: product_taxonomy_index_path, method: :post do |f| %>
      <%= f.govuk_error_summary %>
      <% if @errors %><h1 class="govuk-heading-l"><%= yield :page_title %></h1><% end %>
      <%= f.hidden_field :_dummy, value: "dummy" %>
      <%= f.govuk_file_field :import_file, label: { text: nil, hidden: true }, hint: { text: "Only Excel XLSX files can be uploaded." }, accept: ".xlsx" %>
      <%= f.govuk_submit "Upload product taxonomy file" %>
    <% end %>
  </div>
</div>
