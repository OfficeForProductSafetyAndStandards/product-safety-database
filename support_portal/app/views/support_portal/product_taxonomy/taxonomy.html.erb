<% content_for :page_title, "Current product taxonomy" %>
<% @back_link_href = product_taxonomy_index_path %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column">
    <%= govuk_accordion do |accordion| %>
      <% @records.each do |category| %>
        <%= accordion.with_section(heading_text: "#{category.name} (#{category.product_subcategories.count})") do %>
          <% category.product_subcategories.each do |subcategory| %>
            <p><%= subcategory.name %></p>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <%= govuk_pagination(pagy: @pagy) %>
  </div>
</div>
