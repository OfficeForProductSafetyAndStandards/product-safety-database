<% title = "Your account" %>
<% page_title title %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">

    <h1 class="govuk-heading-l"><%= title %></h1>

    <%= govukSummaryList(
      classes: "app-summary-list--key-weight-regular",
      rows: [
        {
          key: { text: "Name" },
          value: { text: current_user.name },
          actions: {
            items: [
              {
                href: account_name_path,
                text: "Change",
                visuallyHiddenText: "name"
              }
            ]
          }
        },
        {
          key: { text: "Email address" },
          value: { text: current_user.email }
        },
        {
          key: { text: "Mobile number" },
          value: { text: current_user.mobile_number }
        },
        {
          key: { text: "Password" },
          value: { text: "********" }
        },
        {
          # TODO: simplify this once weâ€™ve removed the ability for users to belong
          # to multiple teams.
          key: { text: "Your #{current_user.teams.size == 1 ? 'team' : 'teams'}" },
          value: {
            text: current_user.teams.collect do |team|
              link_to(team.name, team)
            end.to_sentence.html_safe
          }
        }
      ]
    ) %>

    <div class="govuk-inset-text">
      If you need to change your details, email <%= mail_to t(:enquiries_email), nil, class: "govuk-link" %>
    </div>
  </div>
</div>
