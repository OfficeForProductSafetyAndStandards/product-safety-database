<% title = "Add a team to the case" %>
<% page_title title, errors: @edit_access_collaboration.errors.any? %>

<% content_for(:after_header) do %>
  <%= govukBackLink(text: "Back", href: investigation_collaborators_path(@investigation)) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">

    <%= error_summary @edit_access_collaboration.errors %>

    <h1 class="govuk-heading-l"><%= title %></h1>

    <p class="govuk-body">The team will be able to view and edit all case details. They cannot add or remove teams or close the case.</p>

    <%= form_with model: @edit_access_collaboration, url: investigation_collaborators_path(@investigation), method: :post do |form| %>

      <% team_select_items = [{text: "", value: ""}] + @teams.map { |team| { text: team.name, value: team.id, selected: (team.id == @edit_access_collaboration.collaborator_id) } } %>

      <% if @edit_access_collaboration.errors.include?(:team) %>
        <% error_message = { text: @edit_access_collaboration.errors.full_messages_for(:editor).first } %>
      <% end %>

      <%= render "components/govuk_select",
        formGroup: {
          classes: "app-!-autocomplete--max-width-two-thirds"
        },
        name: "collaboration_edit_access[collaborator_id]",
        id: "team",
        errorMessage: error_message,
        items: team_select_items,
        label: {
          text: "Choose team",
          classes: "govuk-label--s"
        },
        is_autocomplete: true,
        show_all_values: true
      %>

      <p class="govuk-body">We’ll email the team to let them know they’ve been added to the case.
</p>

      <% message_html = capture do %>
        <%= render "form_components/govuk_textarea",
          form: form,
          key: :message,
          id: "message",
          label: {
            text: "Message to the team"
          },
          hint: {
            text: "Message will also be included on the case timeline"
          }
        %>
      <% end %>

      <%= render "form_components/govuk_radios",
        form: form,
        key: :include_message,
        classes: "",
        fieldset: {
          legend: {
            text: "Do you want to include instructions or more information?"
          }
        },
        items: [
          {
            id: "include_message",
            text: "Yes, add a message",
            value: "true",
            conditional: {
              html: message_html
            }
          },
          {
            text: "No",
            value: "false"
          }
        ]
      %>


      <%= govukButton(text: "Add team to this case") %>
    <% end %>
  </div>
</div>
