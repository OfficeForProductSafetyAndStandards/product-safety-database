<% title = "Sign in" %>
<% content_for :page_title, title %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">

    <%= resource.decorate.error_summary %>

    <h1 class="govuk-heading-l"><%= title %></h1>

    <p class="govuk-body">
      If you donâ€™t have an account, ask someone in your team to send you an invite or <%= mail_to("OPSS.enquiries@beis.gov.uk", "email OPSS") %>.
    </p>

    <%= form_for(resource, as: resource_name, url: user_session_path, html: { novalidate: true }) do |f| %>
      <%= email_input resource %>
      <%= password_input resource %>

      <%= govukButton(text: "Continue") %>

      <div class="govuk-body">
        <%= link_to "Forgot your password?", new_password_path(resource), class: "govuk-link" %>
      </div>
    <% end %>
  </div>
</div>
