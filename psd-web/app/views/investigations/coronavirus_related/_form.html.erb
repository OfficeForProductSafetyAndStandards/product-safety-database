<%= form_with scope: :investigation, model: investigation, url: url do |form| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <%= error_summary investigation.errors  %>
      <span class="govuk-caption-l">Report an unsafe or non-compliant product</span>

      <%= render "form_components/govuk_radios", form: form, key: :coronavirus_related,
                 fieldset: { legend: { text: fieldset_label, classes: "govuk-fieldset__legend--l", isPageHeading: true } },
                 hint: { text: "For example, cases relating to hand sanitiser or personal protective equipment (PPE)" },
                 items: [{ text: "Yes, it is (or could be)", value: "true", id: "coronavirus_related" },
                         { text: "No, this is business as usual", value: "false" }] %>

      <%= govukButton(text: button_text) %>
    </div>
  </div>
<% end %>
