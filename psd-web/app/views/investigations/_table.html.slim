- search_results.each do |search_result|
  - if search_result[:record].present?
    - if policy(search_result[:record]).show?
      - if search_result.respond_to?("highlight")
        = render "investigations/highlight_card", investigation: search_result[:record], highlights: search_result.highlight
      - else
        = render "investigations/case_card", investigation: search_result[:record], sorted_by: sorted_by
    - else
      = render "investigations/restricted_card", investigation: search_result[:record]
- if search_results.empty?
  p[class="govuk-!-font-weight-bold"] No cases found.
