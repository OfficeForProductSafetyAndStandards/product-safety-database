<% if investigation.is_private? || investigation.is_closed? || investigation.coronavirus_related? %>
  <div class="psd-case-card__status-area">
    <% if investigation.coronavirus_related? %>
      <%= render "components/hmcts_badge",
        text: t(:coronavirus_related, scope: "case.badges"),
        classes: "app-badge--coronavirus psd-case-card__badge"
      %>
    <% end %>
    <% if investigation.is_closed? %>
      <%= render "components/hmcts_badge",
        text: t(:closed, scope: :case_badges),
        classes: "hmcts-badge--grey psd-case-card__badge"
      %>
    <% end %>
    <% if investigation.is_private? %>
      <%= render "components/hmcts_badge",
        text: t(:restricted, scope: :case_badges),
        classes: "hmcts-badge--grey psd-case-card__badge"
      %>
    <% end %>
  </div>
<% end %>
