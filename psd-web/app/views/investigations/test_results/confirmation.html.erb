<% page_title = "Confirm #{@test.pretty_name} details" %>
<%= page_title page_title %>
<% content_for :back_link do %>
  <%= govukBackLink(
    text: "Back",
    href: previous_wizard_path
  ) %>
<% end %>

<%= render "investigations/pages_top", investigation: @investigation %>

<span class="govuk-caption-l"><%= @investigation.pretty_description %></span>
<h1 class="govuk-heading-l"><%= page_title %></h1>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <table class="govuk-table">
      <tbody class="govuk-table__body">
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row">Product</th>
          <td class="govuk-table__cell"><%= @test.product.name %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row">Legislation</th>
          <td class="govuk-table__cell"><%= @test.legislation %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row"><%= @test.requested? ? "Date of request" : "Test date" %></th>
          <td class="govuk-table__cell"><%= @test.date&.strftime("%d/%m/%Y") %></td>
        </tr>

        <% if @test.result %>
          <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="row">Test result</th>
            <td class="govuk-table__cell"><%= @test.result.upcase_first %></td>
          </tr>
        <% end %>

        <% if @test.details.present? %>
          <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="row">Details</th>
            <td class="govuk-table__cell"><%= @test.details %></td>
          </tr>
        <% end %>

        <% if @file_blob %>
          <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="row">Attachment</th>
            <td class="govuk-table__cell"><%= @file_blob.filename %></td>
          </tr>

          <% if @file_blob.metadata[:description].present? %>
            <tr class="govuk-table__row">
              <th class="govuk-table__header" scope="row">Attachment description</th>
              <td class="govuk-table__cell"><%= @file_blob.metadata[:description] %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <%= form_with model: @test, scope: :test, url: investigation_tests_path(@investigation), method: :post do |form| %>
      <%= form.submit "Continue", class: "govuk-button" %>
      <%= link_to "Edit details", previous_wizard_path, class: "govuk-link psd-block-link" %>
    <% end %>
  </div>
</div>
