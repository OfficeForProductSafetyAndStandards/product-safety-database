  actual_items = items.map do |item|
    {
      text: item.decorate.display_name,
      value: item.id
    }
  end

.govuk-grid-row
  .govuk-grid-column-two-thirds
    = render "form_components/govuk_select",
             key: key,
             show_all_values: local_assigns[:show_all_values],
             items: actual_items,
             form: form,
             label: { text: label, classes: "govuk-visually-hidden" },
             is_autocomplete: true
