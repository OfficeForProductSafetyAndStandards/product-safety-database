<tbody class="govuk-table__body">
  <tr class="govuk-table__row">
      <th class="govuk-visually-hidden">
          Product
      </th>
      <th colspan="3" scope="colgroup" class="govuk-table__header">
          <%= link_to product.name, product, class: "govuk-link govuk-link--no-visited-state" %>
      </th>
  </tr>
    <tr class="govuk-table__row">
        <th id="meta-1" class="govuk-visually-hidden">
            Metadata
        </th>
        <td class="govuk-table__cell">
          <%= product.subcategory %>
        </td>
        <td class="govuk-table__cell">
          <%= product.investigations.first.hazard_type %>
        </td>
        <td class="govuk-table__cell">
          <%= product.category %>
        </td>
    </tr>
</tbody>
