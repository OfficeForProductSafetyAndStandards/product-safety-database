<div class="govuk-grid-row psd-product-card">
  <div class="govuk-grid-column-one-half">
    <span class="govuk-caption-m govuk-!-font-size-16">
      Product
    </span>
    <span><%= link_to product.name, product %></span>
  </div>
  <div class="govuk-grid-column-one-half">
    <div class="govuk-grid-column-one-third">
      <span class="govuk-caption-m govuk-!-font-size-16">Product Type</span>
      <span class="govuk-!-font-weight-regular"><%= product.subcategory %></span>
    </div>
    <div class="govuk-grid-column-one-third">
      <span class="govuk-caption-m govuk-!-font-size-16">Category</span>
      <span class="govuk-!-font-weight-regular"><%= product.category %></span>
    </div>
  </div>
</div>
