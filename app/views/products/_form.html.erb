<% label_class = "govuk-label--m" %>
<% # Ideally the width class should affect the input only, not the whole form group, but we're limited by MSPSDS-1045 %>

<% product_category_classes = ["app-!-autocomplete--max-width-three-quarters",
  ("govuk-form-group--error" if product_form.errors[:category].any?)] %>

<%= render "form_components/govuk_select",
  formGroup: { classes: product_category_classes },
  choices: product_categories,
  key: :category,
  form: form,
  show_all_values: true,
  id: "category",
  aria_describedby: "report-product-category-hint",
  is_autocomplete: true,
  label: { text: "Product category", classes: label_class },
  hint: { text: "COVID-19 categories added: ‘PPE’ and ‘Hand sanitiser’" } %>

<%= render "govuk_publishing_components/components/input",
  label: { text: "Product subcategory" },
  name: "product[subcategory]",
  heading_size: "m",
  hint: "For example, ‘Face mask’ or ‘Washing machine’",
  width: 20
%>

<%= form.govuk_publishing_component_radios :authenticity, legend: "Is the product counterfeit?", items: items_for_authenticity(product_form) %>

<% product_marking_fields = capture do %>
  <%= form.govuk_checkboxes :markings,
                            legend: "Select product marking",
                            legend_classes: "govuk-fieldset__legend--s",
                            items: Product::MARKINGS.map { |value| { text: value, value: value} } %>
<% end %>

<%= form.govuk_publishing_component_radios :has_markings,
  legend: "Does the product have UKCA, UKNI, or CE marking?",
  items: [
    { text: "Yes", value: "markings_yes", conditional: product_marking_fields },
    { text: "No", value: "markings_no" },
    { text: "Unknown", value: "markings_unknown" }
  ]
%>


<%= form.govuk_publishing_component_radios :affected_units_status, legend: "How many units are affected?", items: items_for_affected_units(product_form, form) %>

<%= render "govuk_publishing_components/components/input",
  label: { text: "Product brand (if branded)" },
  name: "product[brand]",
  heading_size: "m",
  hint: "For example, ‘Dyson’ or ‘Sony’",
  width: 20
%>

<%= render "govuk_publishing_components/components/input",
  label: { text: "Product name" },
  name: "product[name]",
  heading_size: "m",
  hint:  "Include model name and model number, for example ‘PlayStation 5’",
  width: 20
%>

<%= form.govuk_publishing_component_radios :when_placed_on_market, legend: "Was the product placed on the market before 1 January 2021?", items: items_for_before_2021_radio(product_form) %>

<%= render "govuk_publishing_components/components/input",
  label: { text:  "Barcode number (GTIN, EAN or UPC)" },
  name: "product[barcode]",
  heading_size: "m",
  hint:  "Normally 8, 12, or 13 digits",
  width: 20
%>

<%= render "govuk_publishing_components/components/input",
  label: { text:  "Batch number" },
  name: "product[batch_number]",
  heading_size: "m",
  width: 20
%>

<%= render "govuk_publishing_components/components/textarea",
  label: { text:  "Other product identifiers", heading_size: "m", is_page_heading: true },
  name: "product[product_code]",
  hint: "For example, serial number, Amazon ID (ASIN) or eBay ID. Use a comma to separate multiple identifiers, and a hyphen to indicate ranges."
%>

<%= render "govuk_publishing_components/components/input",
  label: { text:  "Webpage" },
  name: "product[webpage]",
  heading_size: "m",
  hint:  "The manufacturer’s page for the product, or a link to where it can be bought",
  width: 20
%>

<%= render "form_components/govuk_select",
  form: form,
  key: :country_of_origin,
  formGroup: { classes: "app-!-autocomplete--max-width-one-half" },
  items: options_for_country_of_origin(countries, product_form),
  include_blank: true,
  id: "location-autocomplete",
  label: { text: "Country of origin", classes: label_class },
  hint: { text: "Where the product was manufactured" } %>

<%= render "govuk_publishing_components/components/input",
  label: { text:  "Customs code" },
  name: "product[customs_code]",
  heading_size: "m",
  hint:  "For example, CN code (8 digits) or TARIC code (10 digits). Use a comma to separate multiple codes",
  width: 20
%>

<%= render "govuk_publishing_components/components/textarea",
  label: { text:  "Description of product", heading_size: "m", is_page_heading: true },
  name: "product[description]",
  hint: "Details about the product you haven’t included above. For example, colour, size, packaging description. You don’t need to include details of damage or incidents",
  maxlength: 10_000
%>

<%= form.submit local_assigns[:submit_text] || "Save product", class: "govuk-button" %>
