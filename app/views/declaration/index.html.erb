<%= page_title "Declaration", errors: @error_list.include?(:declaration_not_agreed_to) %>

<%= form_with(url: declaration_accept_path, local: true) do |form| %>
  <% if @error_list.include?(:declaration_not_agreed_to) %>
    <%= govukErrorSummary(
      titleText: "There is a problem",
      errorList: [{ text: "You must agree to the declaration to use this service", href: "#agree" }]
    ) %>
  <% end %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-l">Declaration</h1>
      <p>By continuing you agree:</p>

      <ul class="govuk-list govuk-list--bullet">
        <li>to the
          <% html = capture do %>
            terms and conditions<span class="govuk-visually-hidden"> (opens in new tab)</span>
          <% end %>

          <%= link_to html, help_terms_and_conditions_path, target: "_blank", rel: "noreferrer noopener" %>

          and

          <% html = capture do %>
            privacy policy<span class="govuk-visually-hidden"> (opens in new tab)</span>
          <% end %>

          <%= link_to html, help_privacy_notice_path, target: "_blank", rel: "noreferrer noopener" %>
        </li>
        <li>not to share information from the Product Safety Database outside your organisation</li>
        <li>that you have the right to share the information you enter</li>
        <li>that the information you provide is correct to the best of your knowledge</li>
      </ul>

      <% show_error = @error_list.include?(:declaration_not_agreed_to) %>
      <%= govukCheckboxes(
        name: "agree",
        errorMessage: ({ text: "You must agree to the declaration to use this service" } if show_error),
        items: [{ id: "agree", value: "checked", text: "I agree" }]
      ) %>
    </div>
  </div>
  <%= form.submit "Continue", class: "govuk-button" %>
<% end %>
