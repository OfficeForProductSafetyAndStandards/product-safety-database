<% page_title = "You are already signed in to the Product Safety Database" %>
<% content_for :page_title, page_title %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <h1 class="govuk-heading-l"><%= page_title %></h1>
    <%= form_with url: sign_out_before_resetting_password_path(reset_password_token: reset_password_token), method: :post, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |form| %>
      <div class="govuk-button-group">
        <%= govuk_button_link_to("Continue as #{current_user.name}", root_path_for(current_user)) %>
        <%= form.govuk_submit("Reset password for #{@user_with_reset_token.name}", secondary: true) %>
      </div>
    <% end %>
  </div>
</div>
