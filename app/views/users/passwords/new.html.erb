<% title = "Reset your password" %>
<% page_title(title, errors: resource.errors.any?) %>
<% content_for :after_header do %>
  <%= govuk_back_link(href: new_user_session_path) %>
<% end %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_for(resource, as: resource_name, url: user_password_path, builder: GOVUKDesignSystemFormBuilder::FormBuilder) do |form| %>
      <%= form.govuk_error_summary %>
      <h1 class="govuk-heading-l"><%= title %></h1>
      <p class="govuk-body">Enter the email address that you used to register. We will send you an email with a link to reset your password.</p>
      <%= form.govuk_email_field(:email, label: { text: "Email address" }, class: ["govuk-!-width-two-thirds"]) %>
      <%= form.govuk_submit("Send email") %>
    <% end %>
  </div>
</div>
