<div class="govuk-grid-column-one-third">
  <div class="govuk-form-group opss-text-align-right">
    <fieldset id="sort-by-fieldset" class="opss-border-none govuk-!-padding-0 opss-nojs-hide">
      <label class="govuk-label govuk-body-s" for="sort_by">
          Sort <span class="govuk-visually-hidden">the results</span> by
      </label>
      <select class="govuk-select govuk-!-margin-bottom-1" id="sort_by">
        <%= sort_by_options(sort_by_items, selected_value) %>
      </select>
    </fieldset>
    <dl class="govuk-list opss-float-right opss-dl-select opss-js-enabled-hidden">
      <dt>Sort <span class="govuk-visually-hidden">the results</span> by</dt>
      <%= sort_by_definition_list_items(sort_by_items, selected_value) %>
    </dl>
  </div>
</div>
