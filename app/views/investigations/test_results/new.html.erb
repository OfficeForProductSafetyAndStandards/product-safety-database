<% page_heading = "Record test result" %>
<%= page_title page_heading, errors: @test_result_form.errors.any? %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @test_result_form, scope: :test_result, url: investigation_test_results_path(@investigation.pretty_id), builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_error_summary %>
      <h1 class="govuk-heading-l"><%= page_heading %></h1>
      <%= render "form", f: f, test_result_form: @test_result_form, investigation: @investigation, allow_product_linking: true %>
      <%= f.govuk_submit("Add test result") do %>
        <a href="<%= investigation_supporting_information_index_path(@investigation) %>" class="govuk-link">Cancel</a>
      <% end %>
    <% end %>
  </div>
</div>
