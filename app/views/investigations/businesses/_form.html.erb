<%= form_with(model: @remove_business_form, url: investigation_business_path(@investigation, @business), method: :delete, local: true, html: {novalidate: true}, builder: ApplicationFormBuilder) do |form| %>
  <%= form.govuk_radios :remove,
            legend: t(".remove_business_legend"),
   items: [
     { text: t(".yes_label"), value: "true", conditional: { html: form.govuk_text_area(:reason, label_classes: "govuk-label", label: t(".reason_for_removing_the_business_from_the_case"))} },
     { text: t(".no_label"), value: "off" }]
  %>
  <%= form.submit "Submit", class: "govuk-button govuk-button--warning" %>
<% end %>
<%= link_to t(".cancel"), investigation_businesses_path(@investigation), class: "govuk-link" %>
