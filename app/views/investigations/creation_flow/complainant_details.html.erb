<%= page_title @page_title, errors: @complainant.errors.any? %>

<% content_for :after_header do %>
  <%= link_to "Back to cases", investigations_path, class: "govuk-back-link" %>
<% end %>

<%= form_with model: @complainant, local: true, url: wizard_path, method: :put do |form| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <%= govukErrorSummary form: form %>

      <h1 class="govuk-heading-l"><%= @page_title %></h1>

      <%= govukFieldset(legend: { text: "What are their contact details?", classes: "govuk-fieldset__legend--m" }) do %>
        <%= govukInput(
          key: :name,
          form: form,
          attributes: { maxlength: 1000 },
          classes: "govuk-!-width-two-thirds",
          label: { text: "Name" }
        ) %>
        <%= govukInput(
          key: :phone_number,
          form: form,
          attributes: { maxlength: 1000 },
          classes: "govuk-!-width-two-thirds",
          label: { text: "Phone number" }
        ) %>
        <%= govukInput(
          key: :email_address,
          form: form,
          attributes: { maxlength: 1000 },
          classes: "govuk-!-width-two-thirds",
          label: { text: "Email address" }
        ) %>
        <%= govukTextarea(
          key: :other_details,
          form: form,
          attributes: { maxlength: 10_000 },
          label: { text: "Other details" }
        ) %>
      <% end %>

      <%= form.submit "Continue", class: "govuk-button" %>
    </div>
  </div>
<% end %>
