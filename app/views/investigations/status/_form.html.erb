<%= form_with(model: @change_case_status_form, url: form_path, local: true, method: :patch) do |form| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <%= render "form_components/govuk_error_summary", form: form %>

      <%= render "form_components/govuk_textarea",
                 key: :rationale,
                 form: form,
                 attributes: { maxlength: 10_000 },
                 label: { text: t("label", scope: i18n_scope), classes: "govuk-label--l", isPageHeading: true },
                 hint: { text: t("hint", scope: i18n_scope) }
      %>
      <%= form.submit t("action", scope: i18n_scope), class: "govuk-button" %>

      <p><%= link_to "Cancel", investigation_path(@investigation), class: "govuk-link--no-visited-state" %></p>
    </div>
  </div>
<% end %>
