<% page_heading = "Why is the product of concern?" %>
<%= page_title page_heading, errors: @edit_why_reporting_form.errors.any? %>

<%= form_with scope: :investigation, model: @edit_why_reporting_form, url: wizard_path, builder: GOVUKDesignSystemFormBuilder::FormBuilder, method: :put do |form| %>
  <%= form.govuk_error_summary %>
  <%= form.govuk_check_boxes_fieldset :reported_reason, legend: { text: "Why is the product of concern?", size: "l", style: "margin-bottom:15px" }, hint: { text: "Select one or both descriptions.", style: "margin-bottom:32px" } do %>
    <%= form.govuk_check_box :reported_reason_unsafe, "true", label: { text: "The product is unsafe" }, link_errors: true do %>
      <%= edit_unsafe_details_html(form, hazard_types) %>
    <% end %>
    <%= form.govuk_check_box :reported_reason_non_compliant, "true", label: { text: "The product is non-compliant" } do %>
      <%= non_compliant_details_html(form) %>
    <% end %>
  <% end %>
  <%= form.govuk_submit "Continue" %>
<% end %>

