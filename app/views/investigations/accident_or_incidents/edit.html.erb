<% page_heading = "Edit #{@accident_or_incident.event_type}" %>
<% page_title page_heading %>

<% content_for :back_link do %>
  <%= govukBackLink(
    text: "Back",
    href: investigation_action_path(@investigation, @accident_or_incident)
  ) %>
<% end %>

<%= render "investigations/pages_top", investigation: @investigation %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with model: @accident_or_incident.object, scope: :accident_or_incident, method: :put, url: investigation_accident_or_incident_path(@investigation, @accident_or_incident), builder: ApplicationFormBuilder, local: true do |form| %>
      <%= error_summary(@accident_or_incident.errors) %>

      <span class="govuk-caption-l"><%= @investigation.pretty_description %></span>
      <h1 class="govuk-heading-l"><%= page_heading %></h1>

      <%= render "form", form: form, accident_or_incident_form: @accident_or_incident_form, investigation: @investigation, event_type: @event_type %>

      <%= govukButton text: "Update #{@accident_or_incident.event_type}" %>
    <% end %>
  </div>
</div>
