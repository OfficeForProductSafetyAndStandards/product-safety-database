<div class="govuk-body">
  <p>Changes:</p>
  <% if activity.reported_reason_changed? %>
    Reported reason: <b><%= I18n.t(".investigations.overview.safety_and_compliance.#{activity.new_reported_reason}") %></b><br>
  <% end %>

  <% if activity.hazard_type_changed? %>
    Hazard type: <b><%= activity.new_hazard_type %></b><br>
  <% end %>

  <% if activity.hazard_description_changed? %>
    Hazard description: <b><%= activity.new_hazard_description %></b><br>
  <% end %>

  <% if activity.non_compliant_reason_changed? %>
    Non-compliant reason: <b><%= activity.new_non_compliant_reason %></b><br>
  <% end %>
</div>
