<div class="govuk-body">
  <p>Changes:</p>
  <% if activity.date_changed? %>
    <%= "Date of #{activity.type}:" %> <b><%= activity.new_date %></b><br>
  <% end %>

  <% if activity.product_updated? %>
    Product: <b><%= activity.product.name %></b><br>
  <% end %>

  <% if activity.severity_changed? %>
    Severity: <b><%= activity.new_severity %></b><br>
  <% end %>

  <% if activity.usage_changed? %>
    Product usage: <b><%= activity.new_usage %></b><br>
  <% end %>

  <% if activity.additional_info_changed? %>
    Additional Information: <b><%= activity.additional_info %></b><br>
  <% end %>
</div>

<%= link_to "View #{activity.type}", investigation_accident_or_incident_path(activity.investigation, activity.metadata["accident_or_incident_id"]), class: "govuk-link psd-block-link" %>

<% if activity.product_id %>
  <%= link_to "View product", product_url(activity.product_id), class: "govuk-link psd-block-link" %>
<% end %>
