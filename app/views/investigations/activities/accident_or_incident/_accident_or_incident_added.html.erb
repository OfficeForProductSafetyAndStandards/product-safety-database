<div class="govuk-body">
  <%= "Date of #{activity.metadata["event_type"]}:" %> <%= activity.metadata["date"] ? Date.parse(activity.metadata["date"]).to_s(:govuk) : "Unknown" %>
  <br>
  Product: <%= Product.find(activity.metadata["product_id"])&.name  %>
  <br>
  Severity: <%= activity.metadata["severity"]  %>
  <br>
  Product usage: <%= activity.metadata["usage"]  %>
</div>

<%= link_to "View #{activity.metadata["event_type"]}", investigation_accident_or_incident_path(activity.investigation, activity.metadata["accident_or_incident_id"]) %>
