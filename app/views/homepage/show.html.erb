<% content_for :other_head_tags do %>
  <meta name="robots" content="noindex,nofollow" />
<% end %>

<% content_for :masthead do %>
  <div class="app-masthead app-inverted app-inverted--masthead">
    <% if @show_full_phase_banner %>
      <div class="govuk-width-container">
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            <div class="govuk-phase-banner">
              <p class="govuk-phase-banner__content app-body--inverted">
                <span class="govuk-tag govuk-phase-banner__content__tag app-tag--inverted">
                  Beta
                </span>
                <span class="govuk-phase-banner__text">
                  This is a new service â€“ your feedback will help us to improve it.
                </span>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="govuk-width-container">
      <main id="main-content" class="app-main-class govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">

          <div class="govuk-grid-column-two-thirds-from-desktop">
            <h1 class="govuk-heading-xl app-heading-xl--inverted">
              Product safety database
            </h1>
            <p class="govuk-body-l app-body-l--inverted">
              Report, track and share product safety information with the product safety community.
            </p>

            <%= govukButton(
              text: "Sign in to your account",
              href: new_user_session_path,
              classes: "govuk-button--start app-button--inverted"
            ) %>
            <p class="govuk-body app-body--inverted">
              or
              <%= mail_to t(:enquiries_email),
                "email OPSS",
                class: "govuk-link app-link--inverted" %>
              if you think you should have access
            </p>
          </div>
        </div>
      </main>
    </div>
  </div>
<% end %>
