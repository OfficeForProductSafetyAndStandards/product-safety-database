<%
  safe = document.metadata["safe"]
  analyzed = document.metadata["analyzed"]
  document = document.decorate
  heading_classes = heading_classes || "govuk-heading-m govuk-!-margin-bottom-1"
  do_not_show_edit_and_remove_links = do_not_show_edit_and_remove_links || false
%>

<div class="govuk-grid-row govuk-!-padding-bottom-6">
  <div class="govuk-grid-column-one-quarter">
    <%= render "documents/document_preview", document: document, dimensions: "300x200" %>
  </div>

  <div class="govuk-grid-column-three-quarters">
    <% if safe || !analyzed %>
      <h2 class="<%= heading_classes %>">
        <%= document.title %>
      </h2>
      <span class="govuk-hint govuk-!-font-size-16">
        <%= formatted_file_updated_date(document) %>
      </span>

      <p class="govuk-body"><%= document.description %></p>
    <% end %>

    <% if safe %>
      <%= link_with_hidden_text_to "View #{pretty_type_description(document)}",
         "(#{document.title}, opens in new tab)",
         document,
         class: "govuk-link app-block-link govuk-!-margin-right-3 govuk-link--no-visited-state",
         target: '_blank',
         rel: 'noopener' %>

      <% if (!parent.is_a?(Investigation) || policy(parent).update?(user: current_user)) && !do_not_show_edit_and_remove_links %>
        <%= render "documents/document_card_links", document: document, parent: parent %>
      <% end %>
    <% elsif !analyzed %>
      <div class="govuk-warning-text govuk-!-margin-right-7 govuk-!-margin-bottom-3 opss-warning-text--s">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>

        <strong class="govuk-warning-text__text">
            <span class="govuk-warning-text__assistive">Warning</span>
            The image did not finish uploading - this may take several minutes or more. Refresh the image to confirm that the upload process has completed.
        </strong>
      </div>

      <%= link_to "Refresh the image", "", class: "govuk-button govuk-button--secondary opss-button-refresh" %>
    <% end %>
  </div>
</div>
