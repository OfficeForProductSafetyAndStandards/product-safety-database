<% page_heading = "Attachment" %>
<% page_title page_heading %>

<% if @parent.is_a?(Investigation) %>
  <% @investigation = @parent %>

  <% content_for :back_link do %>
    <%= govukBackLink(
      text: "Back to #{@investigation.pretty_description.downcase}",
      href: investigation_supporting_information_index_path(@investigation)
    ) %>
  <% end %>

  <%= render "investigations/pages_top", investigation: @investigation %>

<% else %>
  <% content_for :after_header do %>
    <%= govukBackLink(
      text: "Back",
      href: attachments_tab_path(@parent)
    ) %>
  <% end %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-l"><%= page_heading %></h1>

    <div class="app-meta-area">
      <p class="govuk-body govuk-hint">
        Added <%= @file.created_at.to_formatted_s(:govuk) %>
      </p>
    </div>

    <% rows = [
        {
          key: {
            text: "Type"
          },
          value: {
            text: @file.event_type
          }
        },
        {
          key: {
            text: "Title"
          },
          value: {
            text: @file.title
          }
        },
        {
          key: {
            text: "Event date"
          },
          value: {
            text: @file.date_added
          }
        },
        {
          key: {
            text: "Added"
          },
          value: {
            text: @file.date_added

          }
        }
      ] %>
    <%= govukSummaryList(rows: rows) %>

    <% if documentable_policy(@parent).update? %>
      <p class="govuk-body"><%= link_to "Edit attachment", edit_investigation_document_path(@parent, @file), class: "govuk-link" %></p>
    <% end %>
    <% if documentable_policy(@parent).remove? %>
      <p class="govuk-body"><%= link_to "Remove attachment", remove_investigation_document_path(@parent, @file), class: "govuk-link" %></p>
    <% end %>
  </div>
  <div class="govuk-grid-column-one-third">
    <h2 class="govuk-heading-m">Attachment</h2>
    <p class="govuk-body"><%= link_to @file.title, @file, class: "govuk-link" %></p>

    <%= document_placeholder(@file) %>
  </div>
</div>
