<%
  classes ||= ""
  dl_wrapper_class = %w(govuk-summary-list)
  dl_wrapper_class << classes
%>

<dl class="<%= dl_wrapper_class.join(" ") %>">
  <% rows.each do |row| %>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key <%= row[:key][:classes] %>">
        <%= row[:key][:text] ? row[:key][:text] : sanitize(row[:key][:html]) %>
      </dt>
      <dd class="govuk-summary-list__value <%= row[:value][:classes] %>">
        <%= row[:value][:text] %>
        <% if row[:value][:secondary_text] %>
          <span class='govuk-!-font-size-16 govuk-!-padding-left-2 opss-secondary-text'>
            <%= row[:value][:secondary_text][:text] ? row[:value][:secondary_text][:text] : sanitize(row[:value][:secondary_text][:html]) %>
          <span>
        <% end %>
      </dd>

      <% if row[:actions] %>
        <dd class="govuk-summary-list__actions">
          <% row[:actions].each do |action| %>
            <a class="govuk-link <%= action[:classes] %>" href="<%= action[:href] %>"><%= action[:text] %><span class="govuk-visually-hidden"> <%= action[:visually_hidden_text] %></span></a>
          <% end %>
        </dd>
      <% end %>
    </div>
  <% end %>
</dl>
