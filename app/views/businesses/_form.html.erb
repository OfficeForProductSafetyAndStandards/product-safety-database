<%= form.govuk_fieldset legend: {text: "Name and company number", size: 's'} do %>
  <%= form.govuk_text_field :trading_name,
                            width: 'two-thirds',
                            label: {text: t("businesses.form.trading_name.label")},
                            hint: { text: t("businesses.form.trading_name.hint"), size: 'm' }
  %>

  <%= form.govuk_text_field :legal_name,
                            width: 'two-thirds',
                            label: {text: t("businesses.form.legal_name.label")},
                            hint: { text: t("businesses.form.legal_name.hint_html"), size: 'm'}
  %>

  <%= form.govuk_number_field :company_number,
                            width: 'one-third',
                            label: {text: t("businesses.form.company_number.label") },
                            hint: { text: t("businesses.form.company_number.hint_html"), size: 'm'}
  %>
<% end %>


<%= form.fields_for :locations, business.primary_location do |ff| %>
  <%= render "businesses/locations/address_form", form: ff, countries: countries %>
<% end %>

<%= form.fields_for :contacts, business.primary_contact do |ff| %>
  <%= render "businesses/contacts/form", form: ff %>
<% end %>

<%= form.submit local_assigns[:submit_text] || "Save", class: "govuk-button", data: { cy: "save" } %>
