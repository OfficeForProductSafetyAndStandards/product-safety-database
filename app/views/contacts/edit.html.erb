<%= page_title "Edit contact", errors: @contact.errors.any? %>
<% content_for :after_header do %>
  <%= link_to "Back to business", @business, class: "govuk-back-link" %>
<% end %>

<h1 class="govuk-heading-l">Edit contact</h1>

<%= form_with(model: @contact, url: business_contact_path(@business, @contact), local: true) do |form| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <%= govukErrorSummary form: form %>
      <% heading_html = capture do %>
        <span class="govuk-caption-l"><%= "Business: #{@business.trading_name}" %></span>
        <h1 class="govuk-heading-l">Edit contact</h1>
      <% end %>
      <%= render "form", form: form, legend: { html: heading_html } %>
      <%= govukButton text: "Save" %>
    </div>
  </div>
<% end %>
